<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="15dp" />
    <gradient
        android:angle="45"
        android:centerColor="#fff"
        android:centerX="35%"
        android:endColor="#ffffff"
        android:startColor="#ffffff"
        android:type="linear" />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
    <size
        android:width="270dp"
        android:height="50dp" />
    <stroke
        android:width="1dp"
        android:color="#ff0000" />
</shape>